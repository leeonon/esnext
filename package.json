{
  "name": "esnext",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": ">=18.18.2",
    "pnpm": ">=8.6.0"
  },
  "packageManager": "pnpm@8.10.0",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "clean": "git clean -xdf node_modules",
    "db:push": "pnpm --filter=db push",
    "db:migrate": "pnpm --filter=db migrate",
    "db:migrate:apply": "pnpm --filter=db migrate:apply",
    "db:generate": "pnpm --filter=db generate",
    "db:format": "pnpm --filter=db format",
    "dev:site": "pnpm --filter=site dev",
    "start:site": "pnpm --filter=site start",
    "prepare": "husky install",
    "lint:lint-staged": "lint-staged -c ./.husky/lintstagedrc.js",
    "lint:style": "stylelint **/*.css",
    "lint": "pnpm lint:lint-staged",
    "with-env": "dotenv -e .env --",
    "commit": "git-cz",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [],
  "author": "yang",
  "license": "ISC",
  "peerDependencies": {
    "@types/node": "*"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@commitlint/types": "^18.0.0",
    "@esnext/eslint-config": "workspace:^1.0.0",
    "@esnext/tsconfig": "workspace:^1.0.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/lodash": "^4.14.200",
    "@types/node": "^18.16.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@vitejs/plugin-react": "^4.1.0",
    "@vitest/ui": "^0.34.6",
    "commitizen": "^4.3.0",
    "cz-git": "^1.7.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.52.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.1",
    "stylelint": "^15.11.0",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-order": "^6.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "@nextui-org/react": "0.0.0-dev-v2-20231016135001",
    "dayjs": "^1.11.10",
    "framer-motion": "^10.16.4",
    "fuse.js": "^6.6.2",
    "lodash": "^4.17.21"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@esnext/eslint-config/base"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
