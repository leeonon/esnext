{
  "name": "@esnext/db",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "postinstall": "prisma generate",
    "push": "pnpm with-env prisma db push",
    "migrate": "pnpm with-env prisma migrate dev --create-only",
    "migrate:apply": "pnpm with-env prisma migrate dev",
    "generate": "prisma generate",
    "format": "prisma format",
    "with-env": "dotenv -e ../../.env --"
  },
  "author": "LeeOnOn",
  "license": "ISC",
  "dependencies": {
    "prisma": "^5.1.1",
    "@prisma/client": "5.3.1"
  },
  "devDependencies": {
    "@esnext/db": "workspace:^",
    "@esnext/env": "workspace:^",
    "@otter-hacker/eslint-config": "^2.1.1",
    "@otter-hacker/prettier-config": "^2.1.1",
    "@otter-hacker/tsconfig": "^2.1.1",
    "eslint": "^8.52.0",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@otter-hacker/eslint-config/base"
    ]
  },
  "prettier": "@otter-hacker/prettier-config",
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  }
}
